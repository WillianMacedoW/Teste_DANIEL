<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardBackgroundColor="@color/card_background"
        app:strokeColor="@color/gold_primary"
        app:strokeWidth="2dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/contatoNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gold_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Daniel Souza" />

            <TextView
                android:id="@+id/contatoTelefone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/contatoNome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="(11) 91234-5678" />

            <TextView
                android:id="@+id/contatoObservacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gold_light"
                android:textSize="14sp"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/contatoTelefone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Colega da faculdade" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

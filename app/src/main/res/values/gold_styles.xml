<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo dourado para TextInputLayout com borda -->
    <style name="GoldTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Cor da borda normal -->
        <item name="boxStrokeColor">@color/gold_primary</item>

        <!-- Espessura da borda -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- Cor do texto do hint -->
        <item name="hintTextColor">@color/gold_primary</item>

        <!-- Cor do texto digitado -->
        <item name="android:textColor">@color/white</item>

        <!-- Cor do hint quando nÃ£o focado -->
        <item name="android:textColorHint">@color/gold_light</item>

        <!-- Cor de fundo da caixa -->
        <item name="boxBackgroundColor">@color/black_background</item>

        <!-- Cor do cursor -->
        <item name="cursorColor">@color/gold_primary</item>
    </style>


    <style name="GoldFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/gold_primary</item>
        <item name="tint">@color/black_primary</item>
    </style>


</resources>
